{
  "name": "unused-dependency-cleaner",
  "version": "1.0.0",
  "description": "A CLI tool to scan and remove unused npm dependencies.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "unused-dep-clean": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "scan": "ts-node src/index.ts scan",
    "clean": "ts-node src/index.ts clean",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "npm",
    "dependencies",
    "cleanup",
    "unused",
    "cli"
  ],
  "author": "Hashan2kk2",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.4",
    "@babel/types": "^7.26.3",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}